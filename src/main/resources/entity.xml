<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-4.2.xsd">


   <util:list id="vipSeatsList" list-class="java.util.ArrayList">
       <value>1</value>
       <value>2</value>
       <value>3</value>
       <value>4</value>
       <value>5</value>
   </util:list>

    <bean id="auditorium1" class="com.epam.spring.entity.Auditorium">
        <constructor-arg value="${id1}"/>
        <constructor-arg value="${audName1}"/>
        <constructor-arg value="${numberOfSeats1}"/>
        <constructor-arg ref="vipSeatsList"/>
    </bean>

    <bean id="auditorium2" class="com.epam.spring.entity.Auditorium">
        <constructor-arg value="${id2}"/>
        <constructor-arg value="${audName2}"/>
        <constructor-arg value="${numberOfSeats2}"/>
        <constructor-arg ref="vipSeatsList"/>
    </bean>

    <util:list id="auditoriums" list-class="java.util.ArrayList">
        <ref bean="auditorium1"/>
        <ref bean="auditorium2"/>
    </util:list>

    <bean id="eventDate1" class="java.time.LocalDate" factory-method="of">
            <constructor-arg value="${evYear1}" type="int"/>
            <constructor-arg value="${evMonth1}" type="int"/>
            <constructor-arg value="${evDay1}" type="int"/>
    </bean>

    <bean id="event1" class="com.epam.spring.entity.Event" autowire="byName">
        <constructor-arg value="${id1}"/>
        <constructor-arg value="${evName1}"/>
        <constructor-arg ref="eventDate1"/>
        <constructor-arg value="${time1}"/>
        <constructor-arg value="${price1}"/>
        <constructor-arg value="${capacity1}"/>
    </bean>

    <bean id="eventDate2" class="java.time.LocalDate" factory-method="of">
        <constructor-arg value="${evYear2}" type="int"/>
        <constructor-arg value="${evMonth2}" type="int"/>
        <constructor-arg value="${evDay2}" type="int"/>
    </bean>

    <bean id="event2" class="com.epam.spring.entity.Event" autowire="byName">
        <constructor-arg value="${id2}"/>
        <constructor-arg value="${evName2}"/>
        <constructor-arg ref="eventDate2"/>
        <constructor-arg value="${time2}"/>
        <constructor-arg value="${price2}"/>
        <constructor-arg value="${capacity2}"/>
    </bean>

    <bean id="birthday1" class="java.time.LocalDate" factory-method="of">
        <constructor-arg value="${bYear1}" type="int"/>
        <constructor-arg value="${bMonth1}" type="int"/>
        <constructor-arg value="${bDay1}" type="int"/>
    </bean>

    <bean id="user1" class="com.epam.spring.entity.User" autowire="byName">
        <constructor-arg value="${id1}"/>
        <constructor-arg value="${uName1}"/>
        <constructor-arg value="${email1}"/>
        <constructor-arg ref="birthday1"/>
        <constructor-arg value="${paidTickets1}"/>
    </bean>

    <bean id="birthday2" class="java.time.LocalDate" factory-method="of">
        <constructor-arg value="${bYear2}" type="int"/>
        <constructor-arg value="${bMonth2}" type="int"/>
        <constructor-arg value="${bDay2}" type="int"/>
    </bean>

    <bean id="user2" class="com.epam.spring.entity.User" autowire="byName">
        <constructor-arg value="${id2}"/>
        <constructor-arg value="${uName2}"/>
        <constructor-arg value="${email2}"/>
        <constructor-arg ref="birthday2"/>
        <constructor-arg value="${paidTickets2}"/>
    </bean>

    <bean id="userNull" class="com.epam.spring.entity.User"/>

    <bean id="ticket1" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="1"/>
        <constructor-arg ref="user1"/>
    </bean>

    <bean id="ticket2" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="2"/>
        <constructor-arg ref="userNull"/>
    </bean>

    <bean id="ticket3" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="3"/>
        <constructor-arg ref="user1"/>
    </bean>

    <bean id="ticket4" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="4"/>
        <constructor-arg ref="userNull"/>
    </bean>

    <bean id="ticket5" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="5"/>
        <constructor-arg ref="user1"/>
    </bean>

    <bean id="ticket6" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="6"/>
        <constructor-arg ref="userNull"/>
    </bean>

    <bean id="ticket7" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="7"/>
        <constructor-arg ref="userNull"/>
    </bean>

    <bean id="ticket8" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="8"/>
        <constructor-arg ref="userNull"/>
    </bean>

    <bean id="ticket9" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="9"/>
        <constructor-arg ref="userNull"/>
    </bean>

    <bean id="ticket10" class="com.epam.spring.entity.Ticket" autowire="byName">
        <constructor-arg ref="event1"/>
        <constructor-arg value="10"/>
        <constructor-arg ref="userNull"/>
    </bean>

</beans>