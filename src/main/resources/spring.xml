<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-4.2.xsd
 		http://www.springframework.org/schema/context
 		http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    <context:annotation-config/>
    <context:component-scan base-package="com.epam.spring"/>
    <aop:aspectj-autoproxy/>


    <import resource="service.xml"/>
    <import resource="DAO.xml"/>
    <import resource="entity.xml"/>

    <bean class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:entity.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode">
            <util:constant static-field= "org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE" />
        </property>
    </bean>



    <!--<util:map id="counter" map-class="java.util.HashMap">-->
        <!--<entry key="${evName1}" value="0"/>-->
        <!--<entry key="${evName2}" value="0"/>-->
    <!--</util:map>-->

    <aop:config>
        <aop:aspect id="counterAspect" ref="counterBean">
            <aop:after-returning pointcut="execution(com.epam.spring.service.EventService.getEventByName(..)" method="countEventByName"/>
        </aop:aspect>
    </aop:config>

    <bean id="counterBean" class="com.epam.spring.aspect.CounterAspect"/>
        <!--<property name="counter" ref="counter"/>-->
    <!--</bean>-->


</beans>